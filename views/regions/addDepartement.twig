{% extends "base.html" %}

{% block stylesheet %}
    <style>
        label {
            font-weight: bold;
            width: 100px;
            display: inline-block;
        }
    </style>
{% endblock %}
{% block errMessage %}
    <div class="errMessage">
        {{ errMessage }}
    </div>
{% endblock %}

{% block body %}
    <h1>Ajout d'un département</h1>
    <form action="?c=region&t=addDepartement&id={{ region.id }}&action=add" method="post">
        <h2>Ajout d'un département à cette région</h2>
        </div>
        <label for="departement">Département</label>
        <select name="departement" id="departement">
            {% for departement in departements %}
                <option value="{{departement.id}}">{{ departement.nom }}</option>
            {% endfor %}
        </select>
        <button type="submit">Ajouter</button>
    </form>
{% endblock %}
    
