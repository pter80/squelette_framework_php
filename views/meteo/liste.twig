{% extends "base.html" %}

{% block stylesheet %}
{% endblock %}

{% block errMessage %}
    <div class="errMessage">
        {{ errMessage }}
    </div>
{% endblock %}

{% block body %}
    <h1>Liste des postes Météo</h1>
    <table id="villes">
        <thead>
        <tr>
            <th>id</th>
            <th>Nom</th>
        </tr>
        </thead>
        <tbody>
            {% for ville in villes %}
            <tr>
                <td>{{ ville.id }}</td>
                <td>{{ ville.nom }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block script %}
    <script>
        new DataTable('#villes');
    </script>
{% endblock %}